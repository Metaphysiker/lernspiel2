$('.counter').each(function() {
    var $this = $(this),
        countTo = <%= @points %>;

    $({ countNum: $this.text()}).animate({
            countNum: countTo
        },

        {

            duration: 5000,
            easing:'linear',
            step: function() {
                $this.text(Math.floor(this.countNum));
            },
            complete: function() {
                $this.text(this.countNum);
                //alert('finished');
            }

        });



});